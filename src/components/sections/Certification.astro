---
import Section from "../Section.astro"

import { certifications } from "@cv"
---

<Section title="Certificaciones">
    <ul>
        {
            certifications.map(({ title, summary, date }) => {
                const year = new Date(date).getFullYear()

                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{title}</h3>
                                </div>
                                <div>
                                    <time>{year}</time>
                                </div>
                            </header>

                            <footer>
                                <p>{summary}</p>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul {
      display: flex;
      flex-direction: column;
      gap: 32px;
    }
  
    article h3 {
      font-weight: 500;
      color: #111;
    }
  
    header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
    }
  
    time {
      color: #555;
      font-size: 0.85rem;
      min-width: 102px;
    }
  
    @media (width <= 700px) {
      time {
        text-align: right;
      }
    }
</style>